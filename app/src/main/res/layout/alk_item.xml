<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/name" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/karsten_bier"
            android:id="@+id/kasten"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.6"/>

    <TextView
        android:text="1,00 â‚¬"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preis"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottle"
        android:id="@+id/add_flasche"
        android:paddingRight="34dp"
        android:layout_below="@+id/preis"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_beer"
        android:paddingRight="10dp"
        android:layout_below="@+id/add_flasche"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Gschwoabt: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_flasche"
        android:layout_toStartOf="@+id/num_beer"
        android:id="@+id/textView6" />

</RelativeLayout>